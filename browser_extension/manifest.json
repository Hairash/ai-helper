{
  "manifest_version": 3,
  "name": "LinkedIn AI Reply Helper",
  "version": "0.1",
  "description": "Suggests AI replies in LinkedIn chats.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/messaging/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "ai_helper_icon.png"
  }
}